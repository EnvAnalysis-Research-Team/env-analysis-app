@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login - Environment Analysis";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            font-family: 'Bahnschrift', 'Segoe UI', system-ui, sans-serif;
            background-color: #f4f6fb;
        }
        body {
            min-height: 100vh;
            min-height: 100svh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0f172a;
        }
        .login-card {
            width: min(430px, 100%);
            background: #ffffff;
            border-radius: 1rem;
            padding: 2.75rem;
            box-shadow: 0 30px 80px rgba(15, 23, 42, 0.12);
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }
        .login-card h1 {
            font-size: 1.6rem;
            margin: 0;
            font-weight: 600;
        }
        .login-card form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .login-card label {
            display: block;
            font-size: .82rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: .35rem;
        }
        .login-card input[type="email"],
        .login-card input[type="password"] {
            width: 100%;
            border: 1px solid #d1d5db;
            padding: .65rem .9rem;
            font-size: .92rem;
            border-radius: .4rem;
        }
        .login-card input::placeholder {
            font-family: 'Bahnschrift', 'Segoe UI', system-ui, sans-serif;
            color: #94a3b8;
        }
        .login-card button {
            border: none;
            border-radius: .5rem;
            padding: .7rem 1rem;
            font-weight: 600;
            font-size: .95rem;
            background: #2563eb;
            color: #fff;
            cursor: pointer;
        }
        .login-card button:hover {
            background: #1d4ed8;
        }
        .login-card .subtext {
            font-size: .82rem;
            color: #94a3b8;
            text-align: center;
        }
        .login-card a {
            color: #2563eb;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <section class="login-card">
        <div style="text-align:center;">
            <div style="width:52px;height:52px;margin:0 auto 0.75rem;border-radius:14px;background:#1d4ed8;color:#fff;font-size:1.4rem;display:flex;align-items:center;justify-content:center;">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1>Environment Analysis</h1>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-700 bg-red-100 border border-red-200 rounded-md px-3 py-2" role="alert"></div>
            <div>
                <label asp-for="Input.Email">Email address</label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-xs text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-xs text-red-600"></span>
            </div>
            <div style="display:flex;align-items:center;justify-content:space-between;font-size:.82rem;color:#64748b;">
                <label style="display:flex;align-items:center;gap:0.35rem;cursor:pointer;">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
            </div>
            <button id="login-submit" type="submit">Sign in</button>
        </form>

        <div class="subtext">
            Need access? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Request account</a>
        </div>
    </section>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>

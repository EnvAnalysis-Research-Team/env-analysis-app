@page
@model LoginModel

@{
    ViewData["Title"] = "Login - Environment Analysis";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<section style="max-height:100vh;padding:2rem;font-family:'Bahnschrift', 'Segoe UI', system-ui,sans-serif;display:flex;align-items:center;justify-content:center; margin-top:2rem;">
    <div style="width:420px;height:420px;background:#ffffff;border-radius:8px;box-shadow:0 30px 80px rgba(15,23,42,.12);padding:2.5rem;display:flex;flex-direction:column;justify-content:center;">
        <div style="text-align:center;margin-bottom:1.5rem;">
            <div style="width:52px;height:52px;margin:0 auto 0.75rem;border-radius:14px;background:#1d4ed8;color:#fff;font-size:1.4rem;display:flex;align-items:center;justify-content:center;">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1 style="font-size:1.6rem;font-weight:600;color:#0f172a;margin-bottom:0.2rem;">Environment Analysis</h1>
        </div>

        <form id="account" method="post" style="display:flex;flex-direction:column;gap:0.9rem;">
            <div asp-validation-summary="ModelOnly" style="font-size:.85rem;color:#b91c1c;background:#fee2e2;border:1px solid #fecaca;border-radius:0.5rem;padding:0.4rem 0.75rem;" role="alert"></div>
            <div style="display:flex;flex-direction:column;gap:0.35rem;">
                <label asp-for="Input.Email" style="font-size:.78rem;font-weight:600;color:#475569;">Email address</label>
                <input asp-for="Input.Email"
                       style="padding:0.6rem 0.85rem;border:1px solid #d1d5db;border-radius:0;font-size:.88rem;color:#0f172a;"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="Email address" />
                <span asp-validation-for="Input.Email" style="font-size:.72rem;color:#b91c1c;"></span>
            </div>
            <div style="display:flex;flex-direction:column;gap:0.35rem;">
                <label asp-for="Input.Password" style="font-size:.78rem;font-weight:600;color:#475569;">Password</label>
                <input asp-for="Input.Password"
                       type="password"
                       style="padding:0.6rem 0.85rem;border:1px solid #d1d5db;border-radius:0;font-size:.88rem;color:#0f172a;"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="••••••••" />
                <span asp-validation-for="Input.Password" style="font-size:.72rem;color:#b91c1c;"></span>
            </div>
            <div style="display:flex;align-items:center;justify-content:space-between;font-size:.78rem;color:#64748b;">
                <label style="display:flex;align-items:center;gap:0.35rem;cursor:pointer;">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword" style="color:#2563eb;text-decoration:none;">Forgot password?</a>
            </div>
            <button id="login-submit"
                    type="submit"
                    style="background:#2563eb;color:#fff;font-weight:600;border:none;border-radius:0.5rem;padding:0.65rem 1rem;cursor:pointer;font-size:.9rem;">
                Sign in
            </button>
        </form>

        <div style="margin-top:1.25rem;font-size:.78rem;color:#94a3b8;text-align:center;">
            Need access? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color:#1d4ed8;text-decoration:none;">Request account</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
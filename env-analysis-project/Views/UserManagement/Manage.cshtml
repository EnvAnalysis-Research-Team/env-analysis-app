@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Account Management";
}
@model IEnumerable<env_analysis_project.Models.ApplicationUser>

<div class="max-w-7xl mx-auto bg-white shadow-sm rounded-md py-4 px-6 text-xs">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- LEFT BOX: Search + Filters -->
        <div class="col-span-1 bg-gray-50 border border-gray-200 rounded-md p-4">
            <div class="space-y-3">
                <!-- Search -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-1">Search</label>
                    <form asp-action="Index" method="get"
                          class="flex items-center border border-gray-300 rounded-md overflow-hidden">
                        <input type="text" name="searchString"
                               placeholder="Search by email or name..."
                               value="@Context.Request.Query["searchString"]"
                               class="px-3 py-2 w-full text-xs focus:outline-none focus:ring-1 focus:ring-blue-500" />
                    </form>
                </div>

                <!-- Filters -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-1">Role</label>
                    <select name="roleFilter"
                            class="w-full border border-gray-300 rounded-md px-2 py-2 text-xs focus:ring-1 focus:ring-blue-500 focus:outline-none bg-white">
                        <option value="">All Roles</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold mb-1">Sort By</label>
                    <select name="sortOption"
                            class="w-full border border-gray-300 rounded-md px-2 py-2 text-xs focus:ring-1 focus:ring-blue-500 focus:outline-none bg-white">
                        <option value="date_desc">Newest First</option>
                        <option value="date_asc">Oldest First</option>
                        <option value="name_asc">Name A → Z</option>
                        <option value="name_desc">Name Z → A</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- RIGHT BOX: Table + Top Buttons -->
        <div class="col-span-1 md:col-span-3">
            <!-- Top Controls -->
            <div class="flex justify-end items-center mb-3 gap-2">
                <button type="button"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-3 py-1.5 rounded-md transition flex items-center gap-1"
                        onclick="openAddModal()">
                    <i class="bi bi-person-plus text-[10px]"></i> Add
                </button>

                <button type="button"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-3 py-1.5 rounded-md transition flex items-center gap-1">
                    <i class="bi bi-file-earmark-excel text-[10px]"></i> Export
                </button>

                <button type="button"
                        class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium px-3 py-1.5 rounded-md transition flex items-center gap-1"
                        onclick="location.reload()">
                    <i class="bi bi-arrow-clockwise text-[10px]"></i> Refresh
                </button>

                <button type="button"
                        class="bg-gray-200 hover:bg-gray-300 text-black font-medium px-3 py-1.5 rounded-md transition flex items-center gap-1">
                    <i class="bi bi-sliders text-[10px]"></i> Reset
                </button>
            </div>

            <!-- User Table -->
            <div class="overflow-x-auto border border-gray-200 rounded-md">
                <table class="min-w-full text-left text-gray-700">
                    <thead class="bg-gray-100 text-gray-600">
                        <tr>
                            <th class="px-4 py-2 font-semibold">Full Name</th>
                            <th class="px-4 py-2 font-semibold">Email</th>
                            <th class="px-4 py-2 font-semibold">Role</th>
                            <th class="px-4 py-2 font-semibold">Created At</th>
                            <th class="px-4 py-2 font-semibold text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="px-4 py-2">@user.FullName</td>
                                    <td class="px-4 py-2">@user.Email</td>
                                    <td class="px-4 py-2">@user.Role</td>
                                    <td class="px-4 py-2">@user.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                    <td class="px-4 py-2 text-center">
                                        <div class="flex items-center justify-center gap-2">
                                            <button type="button"
                                                    onclick="openDetailModal('@user.Id')"
                                                    class="w-7 h-7 flex items-center justify-center border border-blue-300 rounded-md text-blue-600 hover:bg-blue-100 transition"
                                                    title="View Details">
                                                <i class="bi bi-eye text-[10px]"></i>
                                            </button>
                                            <form asp-action="Delete" method="post" class="inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit"
                                                        class="w-7 h-7 flex items-center justify-center border border-red-400 text-red-500 rounded-md hover:bg-red-50 transition"
                                                        title="Delete User">
                                                    <i class="bi bi-trash text-[10px]"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="px-4 py-4 text-center text-gray-400">
                                    No users found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- ========================= MODAL DETAIL / EDIT USER ========================= -->
<div id="detailModal"
     class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-start justify-center pt-16 z-50 transition-opacity duration-300 ease-out">
    <div id="detailModalContent"
         class="bg-white rounded-md shadow-md w-full max-w-xl p-6 relative transform scale-95 opacity-0 transition-all duration-300 ease-out border border-gray-200">

        <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <i class="bi bi-person-lines-fill text-blue-600"></i> Edit User
        </h2>

        <form id="editUserForm" method="post" class="space-y-3 text-xs text-gray-700">
            @Html.AntiForgeryToken()

            <input type="hidden" name="Id" id="detailId" />

            <div>
                <label class="block font-medium text-gray-700 mb-1">Email</label>
                <input name="Email" id="detailEmail" type="email" required
                       class="w-full border border-gray-300 rounded-sm px-3 py-2 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Full Name</label>
                <input name="FullName" id="detailFullName" type="text"
                       class="w-full border border-gray-300 rounded-sm px-3 py-2 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Role</label>
                <select name="Role" id="detailRole"
                        class="w-full border border-gray-300 rounded-sm px-3 py-2 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none">
                    <option value="">-- Select Role --</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Created At</label>
                <input id="detailCreatedAt" type="text" readonly
                       class="w-full border border-gray-200 bg-gray-100 rounded-sm px-3 py-2 text-gray-500 cursor-not-allowed" />
            </div>

            <div class="flex justify-end pt-5 space-x-2">
                <button type="button" onclick="closeDetailModal()"
                        class="flex items-center bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-4 py-2 rounded-sm transition gap-1">
                    </i> Close
                </button>
                <button type="button" onclick="saveUserChanges()"
                        class="flex items-center bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-4 py-2 rounded-sm transition gap-1">
                    </i> Save Changes
                </button>
            </div>
        </form>

        <button type="button" onclick="closeDetailModal()"
                class="absolute top-2 right-2 text-gray-400 hover:text-gray-600">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
</div>
<!-- ========================= MODAL ADD USER ========================= -->
<div id="addModal"
     class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-start justify-center pt-16 z-50 transition-opacity duration-300 ease-out">
    <div id="addModalContent"
         class="bg-white rounded-md shadow-md w-full max-w-xl p-6 relative transform scale-95 opacity-0 transition-all duration-300 ease-out border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <i class="bi bi-person-plus-fill text-blue-600"></i> Add New User
        </h2>

        <form asp-action="Create" method="post" class="space-y-4 text-xs">
            @Html.AntiForgeryToken()

            <div>
                <label class="block font-medium text-gray-700 mb-1">Email</label>
                <input name="Email" type="email" required
                       class="w-full border border-gray-300 rounded-sm px-3 py-2 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Full Name</label>
                <input name="FullName" type="text" required
                       class="w-full border border-gray-300 rounded-sm px-3 py-2 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Role</label>
                <select name="Role"
                        class="w-full border border-gray-300 rounded-sm px-3 py-2 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none">
                    <option value="">-- Select Role --</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div>

            <div>
                <label class="block font-medium text-gray-700 mb-1">Password</label>
                <input name="password" type="password" required
                       class="w-full border border-gray-300 rounded-sm px-3 py-2 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
            </div>

            <div class="flex justify-end space-x-2 pt-4">
                <button type="button" onclick="closeAddModal()"
                        class="flex items-center bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-4 py-2 rounded-sm transition gap-1">
                    Cancel
                </button>
                <button type="submit"
                        class="flex items-center bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-4 py-2 rounded-sm transition gap-1">
                    Create
                </button>
            </div>
        </form>

        <button type="button" onclick="closeAddModal()"
                class="absolute top-2 right-2 text-gray-400 hover:text-gray-600">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
</div>



@section Scripts {

    <script src="~/js/user-management.js" asp-append-version="true"></script>

    <partial name="_ValidationScriptsPartial" />

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Environment Analysis</title>

    <!-- Tailwind (chỉ nên dùng khi dev, production nên build file CSS riêng) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Chart.js + Luxon adapter -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon"></script>

    <!-- jQuery (load trước validate) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation (phụ thuộc vào jQuery) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <!-- Alpine.js -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">

    <header class="bg-white shadow-sm">
        <nav class="max-w-7xl mx-auto flex items-center p-4">

            <!-- Logo / Title -->
            <a class="text-md font-bold text-blue-800" asp-area="" asp-controller="Home" asp-action="Index">
                ENVIRONMENT ANALYSIS
            </a>

            <!-- Menu giữa -->
            <ul class="flex space-x-8 text-sm font-medium text-gray-700 ml-12 cursor-pointer">
                <li>
                    <a class="hover:text-black transition" asp-controller="Home" asp-action="Index">
                        Dashboard
                    </a>
                </li>
                <li x-data="{ open: false }" class="relative">
                    <button @@click="open = !open"
                            @@click.away="open = false"
                            class="hover:text-black transition flex items-center space-x-1">
                        <span>Data Center</span>
                        <i class="bi bi-caret-down-fill text-[10px] mt-[2px]"></i>
                    </button>

                    <!-- Dropdown menu -->
                    <div x-show="open" x-transition class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg py-1 z-50">
                        <a asp-controller="SourceManagement" asp-action="Manage"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                            Source Management
                        </a>
                        <a asp-controller="MeasurementResults" asp-action="Manage"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                            Measurement Results
                        </a>
                    </div>
                </li>

                <li>
                    <a class="hover:text-black transition">
                        Alerts & Forecasts
                    </a>
                </li>

                <a class="hover:text-black transition" asp-controller="UserManagement" asp-action="Index">
                    Account Management
                </a>
            </ul>

            <!-- Icon user bên phải -->
            <div class="text-gray-500 cursor-pointer ml-auto text-xs">
                <i class="bi bi-person-circle text-xl hover:black"></i>
            </div>

        </nav>
    </header>

    <main role="main" class="flex-grow container mx-auto py-4 max-w-7xl">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 text-gray-700 py-6 mt-24">
        <div class="container max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between px-4 space-y-3 md:space-y-0">

            <!-- Bản quyền -->
            <div class="text-sm text-center md:text-left">
                &copy; 2025 <span class="font-semibold text-gray-900">Environment Analysis</span>. All rights reserved.
            </div>

            <!-- Liên kết mạng xã hội -->
            <div class="flex space-x-5 text-xl">
                <a href="https://www.facebook.com/nguyen.khanh.201930" target="_blank"
                   class="hover:text-blue-600 transition-colors duration-200">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://github.com/KhanhNguyenVimaru/env-analysis" target="_blank"
                   class="hover:text-gray-800 transition-colors duration-200">
                    <i class="bi bi-github"></i>
                </a>
            </div>

        </div>
    </footer>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

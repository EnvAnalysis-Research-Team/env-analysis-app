@using Microsoft.AspNetCore.Identity
@using env_analysis_project.Models
@using env_analysis_project.Security
@using System.Text.Json
@inject UserManager<ApplicationUser> UserManager
@{
    var isUserAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var currentUserName = User.Identity?.Name ?? "Account";
    var accessToken = Context.Request.Cookies[JwtDefaults.AccessTokenCookieName];
    var showAccessDeniedBanner = Context.Request.Query.ContainsKey("accessDenied");

    if (isUserAuthenticated)
    {
        var fullNameClaim = User.FindFirst("fullName")?.Value;
        if (!string.IsNullOrWhiteSpace(fullNameClaim))
        {
            currentUserName = fullNameClaim;
        }
        else
        {
            var currentUser = await UserManager.GetUserAsync(User);
            if (!string.IsNullOrWhiteSpace(currentUser?.FullName))
            {
                currentUserName = currentUser.FullName!;
            }
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Environment Analysis</title>

    <!-- Tailwind (chỉ nên dùng khi dev, production nên build file CSS riêng) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Chart.js + Luxon adapter -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon"></script>

    <!-- jQuery (load trước validate) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation (phụ thuộc vào jQuery) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <!-- Alpine.js -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        [x-cloak] {
            display: none !important;
        }
    </style>

    <script>
        window.authState = {
            accessToken: @Html.Raw(JsonSerializer.Serialize(accessToken ?? string.Empty))
        };
        if (window.location.search && window.location.search.includes('accessDenied=1')) {
            const url = new URL(window.location.href);
            url.searchParams.delete('accessDenied');
            window.history.replaceState({}, document.title, url);
        }
    </script>
    <script src="~/js/jwt-fetch.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>


<body class="bg-gray-50 text-gray-800 flex flex-col">

    <header class="bg-white border-b border-gray-200">
        <nav class="max-w-full mx-auto flex items-center p-4 ">

            <!-- Logo / Title -->
            <a class="text-md font-bold text-blue-800" asp-area="" asp-controller="Home" asp-action="Index">
                ENVIRONMENT ANALYSIS
            </a>

            <!-- Menu giữa -->
            <ul class="flex space-x-8 text-sm font-medium text-gray-700 ml-12 cursor-pointer">
                <li>
                    <a class="hover:text-black transition" asp-controller="Home" asp-action="Index">
                        Dashboard
                    </a>
                </li>
                <li x-data="{ open: false }" class="relative">
                    <button @@click="open = !open"
                            @@click.away="open = false"
                            class="hover:text-black transition flex items-center space-x-1">
                        <span>Data Center</span>
                        <i class="bi bi-caret-down-fill text-[10px]"></i>
                    </button>

                    <!-- Dropdown menu -->
                    <div x-show="open" x-transition x-cloak class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg py-1 z-50">
                        <a asp-controller="SourceManagement" asp-action="Manage"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                            Source Management
                        </a>
                        <a asp-controller="MeasurementResults" asp-action="Manage"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                            Measurement Data
                        </a>
                        <a asp-controller="Parameters" asp-action="Manage"
                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                            Parameters
                        </a>
                    </div>
                </li>

                <li>
                    <a class="hover:text-black transition" asp-controller="AlertsForecasts" asp-action="Index">
                        Alerts & Forecasts
                    </a>
                </li>

                <a class="hover:text-black transition" asp-controller="UserManagement" asp-action="Index">
                    Account Management
                </a>
                <a class="hover:text-black transition" asp-controller="SystemLog" asp-action="Manage">
                    System Log
                </a>
            </ul>

            <!-- Icon user bên phải -->
            @if (isUserAuthenticated)
            {
                <div class="ml-auto relative text-sm text-gray-700" x-data="{ userMenuOpen: false }" x-cloak>
                    <button type="button"
                            class="flex items-center gap-2 px-3 py-1.5 transition"
                            @@click="userMenuOpen = !userMenuOpen"
                            @@click.away="userMenuOpen = false"
                            @@keydown.escape.prevent.stop="userMenuOpen = false">
                        <span class="font-semibold text-gray-800">@currentUserName</span>
                        <i class="bi" :class="userMenuOpen ? 'bi-caret-up-fill text-[10px] mt-[2px]' : 'bi-caret-down-fill text-[10px] mt-[2px]'"></i>
                    </button>
                    <div x-show="userMenuOpen"
                         x-transition
                         class="absolute right-0 mt-2 w-40 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                        <div class="px-4 py-2 text-[11px] text-gray-500 border-b border-gray-100">
                            Signed in as
                            <div class="font-semibold text-gray-800 text-sm truncate">@currentUserName</div>
                        </div>
                        <form method="post"
                              asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                              class="px-4 py-2">
                            <button type="submit"
                                    class="w-full text-left text-sm text-red-600 hover:text-red-700 font-semibold">
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="ml-auto flex items-center gap-4 text-xs font-semibold text-gray-600">
                    <a asp-area="Identity" asp-page="/Account/Login" class="hover:text-blue-600 transition">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="hover:text-blue-600 transition">Register</a>
                </div>
            }

        </nav>
    </header>

    @if (showAccessDeniedBanner)
    {
        <div class="max-w-full mx-auto mt-4 px-4">
            <div role="alert"
                 class="flex items-start gap-3 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800 shadow-sm">
                <div>
                    <p class="text-red-700">You do not have permission to view that page.</p>
                </div>
            </div>
        </div>
    }

    <main role="main" class="flex-grow container mx-auto max-w-full min-h-[90vh]">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 text-gray-700 py-6">
        <div class="container max-w-full mx-auto flex flex-col md:flex-row items-center justify-between px-4 space-y-3 md:space-y-0">

            <!-- Bản quyền -->
            <div class="text-sm text-center md:text-left">
                &copy; 2025 <span class="font-semibold text-gray-900">Environment Analysis</span>. All rights reserved.
            </div>

            <!-- Liên kết mạng xã hội -->
            <div class="flex space-x-5 text-xl">
                <a href="https://github.com/KhanhNguyenVimaru/env-analysis" target="_blank"
                   class="hover:text-gray-800 transition-colors duration-200">
                    <i class="bi bi-github"></i>
                </a>
            </div>

        </div>
    </footer>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

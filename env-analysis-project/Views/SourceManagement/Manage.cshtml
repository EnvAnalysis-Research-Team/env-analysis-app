@model IEnumerable<env_analysis_project.Models.EmissionSource>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Source Management";
}

<div class="max-w-full mx-auto p-4 space-y-6 w-full h-full">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-4 w-full h-full">
        <div class="lg:col-span-1 h-full">
            <div class="w-full bg-white border border-gray-200 rounded-md shadow-sm p-4 space-y-3 text-xs">
                <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
                    <div>
                        <h2 class="text-sm font-semibold text-gray-700">Source Type</h2>
                        <p class="text-[11px] text-gray-500">Sources snapshot.</p>
                    </div>
                    <div class="flex flex-col sm:flex-row sm:items-center gap-2 w-full sm:w-auto">
                        <input id="sourceTypeSearchInput" type="text" placeholder="Filter types..."
                            class="text-[11px] border border-gray-300 rounded-md px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none w-full sm:w-40" />
                        <button type="button" id="sourceTypeSearchReset"
                            class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-[11px] font-medium px-3 py-1.5 rounded-md transition inline-flex items-center gap-1">
                            <i class="bi bi-arrow-clockwise text-[10px]"></i>
                            Reset
                        </button>
                        <button type="button" id="openAddTypeModalBtn"
                            class="bg-blue-600 hover:bg-blue-700 text-white text-[11px] font-medium px-3 py-1.5 rounded-md transition inline-flex items-center gap-1">
                            <i class="bi bi-plus text-[10px]"></i>
                            Add
                        </button>
                    </div>
                </div>
                <div class="overflow-x-auto border border-gray-200 rounded-md">
                    <table id="sourceTypeTable" class="min-w-full text-left text-gray-700">
                        <thead class="bg-gray-100 text-gray-600 text-[11px]">
                            <tr>
                                <th class="px-3 py-2 font-semibold">Type</th>
                                <th class="px-3 py-2 text-center font-semibold">Number</th>
                                <th class="px-3 py-2 text-center font-semibold">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="sourceTypeTbody" class="divide-y divide-gray-200">
                            @foreach (var type in ViewBag.SourceTypes ?? new List<dynamic>())
                            {
                                var id = type.SourceTypeID;
                                var name = type.SourceTypeName;
                                var count = type.Count;

                                <tr class="type-row hover:bg-white cursor-pointer" data-id="@id" data-name="@name"
                                    data-count="@count">
                                    <td class="px-3 py-2 truncate" title="@name">@name</td>
                                    <td class="px-3 py-2 text-center font-medium">@count</td>
                                    <td class="px-3 py-2 text-center">
                                        <div class="flex items-center justify-center gap-2">
                                            <button type="button"
                                                class="w-7 h-7 flex items-center justify-center border border-blue-300 rounded-md text-blue-600 hover:bg-blue-100 transition"
                                                title="View Details" data-id="@id">
                                                <i class="bi bi-eye text-[10px]"></i>
                                            </button>
                                            <button type="button"
                                                class="w-7 h-7 flex items-center justify-center border border-red-400 text-red-500 rounded-md hover:bg-red-50 transition delete-type-btn"
                                                data-id="@id" data-name="@name" title="Delete Source Type">
                                                <i class="bi bi-trash text-[10px]"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }

                            @if ((ViewBag.SourceTypes == null) || (((IEnumerable<dynamic>)ViewBag.SourceTypes).Any() ==
                                                        false))
                            {
                                <tr id="noSourceTypesRow">
                                    <td colspan="3" class="px-4 py-4 text-center text-gray-400 text-[11px]">
                                        No source types found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- EMISSION SOURCE TABLE -->
        </div>

        <!-- EMISSION SOURCE TABLE -->
        <section class="lg:col-span-3 w-full h-full bg-white border border-gray-200 rounded-md shadow-sm p-4 space-y-4 text-xs">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
                <div>
                    <h2 class="text-sm font-semibold text-gray-700">Emission Sources</h2>
                    <p class="text-[11px] text-gray-500">Search, manage and export emission sources.</p>
                    </div>
                    <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                        <input id="emissionSearchInput"
                            type="text"
                            placeholder="Type to filter sources..."
                            class="text-xs border border-gray-300 rounded-md px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none w-full sm:w-60" />

                        <button type="button"
                            id="emissionSearchReset"
                            class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium px-3 py-1.5 rounded-md transition inline-flex items-center gap-1">
                            <i class="bi bi-arrow-clockwise text-[10px]"></i>
                            Reset
                        </button>

                        <button type="button" id="openAddSourceModalBtn"
                            class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-3 py-1.5 rounded-md transition inline-flex items-center gap-1">
                            <i class="bi bi-plus text-[10px]"></i>
                            Add
                        </button>

                        <a asp-action="ExportCsv" asp-controller="SourceManagement"
                            class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-3 py-1.5 rounded-md transition inline-flex items-center gap-1">
                            <i class="bi bi-file-earmark-excel text-[10px]"></i>
                            Export
                        </a>
                    </div>
                </div>
                <div class="overflow-x-auto border border-gray-200 rounded-md">
                    <table class="min-w-full text-left text-gray-700">
                        <thead class="bg-gray-100 text-gray-600">
                            <tr>
                                <th class="px-4 py-2 font-semibold">Source Name</th>
                                <th class="px-4 py-2 font-semibold">Source Code</th>
                                <th class="px-4 py-2 font-semibold">Location</th>
                                <th class="px-4 py-2 font-semibold">Latitude</th>
                                <th class="px-4 py-2 font-semibold">Longitude</th>
                                <th class="px-4 py-2 font-semibold">Source Type</th>
                                <th class="px-4 py-2 font-semibold text-center">Status</th>
                                <th class="px-4 py-2 font-semibold text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="emissionSourcesTableBody" class="divide-y divide-gray-200">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var src in Model)
                                {
                                    var statusTag = src.IsActive ? "active" : "inactive";
                                    var rowClasses = $"emission-source-row {(src.IsDeleted ? "bg-red-200 opacity-80" : "hover:bg-gray-50 transition")}";
                                    <tr class="@rowClasses"
                                        data-lat="@src.Latitude?.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                        data-lng="@src.Longitude?.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                        data-name="@src.SourceName"
                                        data-code="@src.SourceCode"
                                        data-location="@src.Location"
                                        data-type="@src.SourceType?.SourceTypeName"
                                        data-status="@(src.IsDeleted ? "deleted" : statusTag)">
                                        <td class="px-4 py-2">@src.SourceName</td>
                                        <td class="px-4 py-2">@src.SourceCode</td>
                                        <td class="px-4 py-2">@src.Location</td>
                                        <td class="px-4 py-2">@src.Latitude</td>
                                        <td class="px-4 py-2">@src.Longitude</td>
                                        <td class="px-4 py-2">@src.SourceType?.SourceTypeName</td>
                                        <td class="px-4 py-2 text-center">
                                            @if (src.IsDeleted)
                                            {
                                                <span class="text-red-600 font-medium">Deleted</span>
                                            }
                                            else if (src.IsActive)
                                            {
                                                <span class="text-green-600 font-medium">Active</span>
                                            }
                                            else
                                            {
                                                <span class="text-red-500 font-medium">Inactive</span>
                                            }
                                        </td>
                                        <td class="px-4 py-2 text-center space-x-2">
                                            <div class="flex items-center justify-center gap-2">
                                                @if (!src.IsDeleted)
                                                {
                                                    <button type="button"
                                                        class="w-7 h-7 flex items-center justify-center border border-blue-300 rounded-md text-blue-600 hover:bg-blue-100 transition"
                                                        title="View Details" data-id="@src.EmissionSourceID">
                                                        <i class="bi bi-eye text-[10px]"></i>
                                                    </button>
                                                    <button type="button"
                                                        class="w-7 h-7 flex items-center justify-center border border-red-400 text-red-500 rounded-md hover:bg-red-50 transition delete-source-btn"
                                                        data-id="@src.EmissionSourceID" data-name="@src.SourceName"
                                                        title="Delete Emission Source">
                                                        <i class="bi bi-trash text-[10px]"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button"
                                                        class="w-7 h-7 flex items-center justify-center border border-green-400 text-green-700 rounded-md hover:bg-green-50 transition restore-source-btn"
                                                        data-id="@src.EmissionSourceID" data-name="@src.SourceName"
                                                        title="Restore Emission Source">
                                                        <i class="bi bi-arrow-counterclockwise text-[10px]"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>

                                    </tr>
                                }
                                <tr id="emissionNoMatchRow" class="hidden">
                                    <td colspan="8" class="px-4 py-4 text-center text-gray-400">
                                        No emission sources match your search.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="px-4 py-4 text-center text-gray-400">
                                        No emission sources found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

    <!-- MODAL: Add Source Type -->
    <div id="addTypeModal"
        class="fixed inset-0 bg-black bg-opacity-40 hidden items-start justify-center z-50 p-4 pt-16 transition-all duration-200 opacity-0 -translate-y-5 !mt-0">
        <div class="bg-white rounded-md shadow-lg w-full max-w-xl p-5 space-y-4 h-fit">
            <div class="flex justify-between items-center border-b border-gray-200 pb-2">
                <h2 class="text-sm font-semibold text-gray-700">Add Source Type</h2>
                <button id="closeAddTypeModal" class="text-gray-500 hover:text-gray-700">
                    <i class="bi bi-x-lg text-xs"></i>
                </button>
            </div>

            <form id="addTypeForm" asp-controller="SourceTypes" asp-action="Create" method="post"
                class="space-y-3 text-xs">
                @Html.AntiForgeryToken()

                <div>
                    <label class="block font-medium text-gray-600 mb-1">Source Type Name</label>
                    <input type="text" name="SourceTypeName" required
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                </div>
                <div>
                    <label class="block font-medium text-gray-600 mb-1">Description</label>
                    <textarea name="Description" rows="3"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none"></textarea>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="IsActive" id="IsActive" value="true" checked
                        class="h-3.5 w-3.5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />

                    <label for="IsActive" class="text-gray-700">Active</label>
                </div>
                <div class="flex justify-end space-x-2 pt-2">
                    <button type="button" id="cancelAddTypeBtn"
                        class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-3 py-1.5 rounded-sm transition">
                        Cancel
                    </button>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-3 py-1.5 rounded-sm transition">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- MODAL: Edit Source Type (JS-controlled) -->
    <div id="editTypeModal"
        class="fixed inset-0 bg-black bg-opacity-40 hidden items-start justify-center z-50 p-4 pt-16 transition-all duration-200 opacity-0 -translate-y-5 !mt-0">
        <div class="bg-white rounded-md shadow-lg w-full max-w-xl p-5 space-y-4 h-fit">
            <div class="flex justify-between items-center border-b border-gray-200 pb-2">
                <h2 class="text-sm font-semibold text-gray-700">View / Edit Source Type</h2>
                <button id="closeEditModal" class="text-gray-500 hover:text-gray-700">
                    <i class="bi bi-x-lg text-xs"></i>
                </button>
            </div>

            <form id="editTypeForm" method="post" class="space-y-3 text-xs">
                @Html.AntiForgeryToken()
                <input type="hidden" name="SourceTypeID" id="edit_SourceTypeID" />

                <div>
                    <label class="block font-medium text-gray-600 mb-1">Source Type Name</label>
                    <input type="text" name="SourceTypeName" id="edit_SourceTypeName" required
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                </div>
                <div>
                    <label class="block font-medium text-gray-600 mb-1">Description</label>
                    <textarea name="Description" id="edit_Description" rows="3"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none"></textarea>
                </div>
                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="IsActive" id="edit_IsActive" value="true" checked"
                        class="h-3.5 w-3.5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label for="edit_IsActive" class="text-gray-700">Active</label>
                </div>

                <div class="flex justify-between items-center pt-2">
                    <div class="space-x-2">
                        <button id="deleteTypeBtn" type="button" class="text-xs text-red-600 hover:text-red-800">
                            Delete
                        </button>
                    </div>

                    <div class="flex space-x-2">
                        <button type="button" id="cancelEditBtn"
                            class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-3 py-1.5 rounded-sm transition">
                            Cancel
                        </button>
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-3 py-1.5 rounded-sm transition">
                            Save changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- MODAL: Add Emission Source -->
    <div id="addSourceModal"
        class="fixed inset-0 bg-black bg-opacity-40 hidden items-start justify-center z-50 p-4 pt-16 transition-all duration-200 opacity-0 -translate-y-5 !mt-0">
        <div class="bg-white rounded-md shadow-lg w-full max-w-2xl p-5 space-y-4 h-fit">
            <!-- HEADER -->
            <div class="flex justify-between items-center border-b border-gray-200 pb-2">
                <h2 class="text-sm font-semibold text-gray-700">Add New Emission Source</h2>
                <button id="closeAddModal" class="text-gray-500 hover:text-gray-700">
                    <i class="bi bi-x-lg text-xs"></i>
                </button>
            </div>

            <!-- FORM -->
            <form id="addSourceForm" asp-controller="EmissionSources" asp-action="Create" method="post"
                class="space-y-3 text-xs">
                @Html.AntiForgeryToken()

                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Code</label>
                        <input type="text" name="SourceCode" id="add_SourceCode" required
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Name</label>
                        <input type="text" name="SourceName" id="add_SourceName" required
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Latitude</label>
                        <input type="number" step="any" name="Latitude" id="add_Latitude"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Longitude</label>
                        <input type="number" step="any" name="Longitude" id="add_Longitude"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Location</label>
                        <input type="text" name="Location" id="add_Location"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Type</label>
                        <select name="SourceTypeID" id="add_SourceTypeID" required
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none">
                            <option value="">-- Select Type --</option>
                            @foreach (var type in ViewBag.SourceTypes ?? new List<dynamic>())
                            {
                                <option value="@type.SourceTypeID">@type.SourceTypeName</option>
                            }
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block font-medium text-gray-600 mb-1">Description</label>
                    <textarea name="Description" id="add_Description" rows="3"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none"></textarea>
                </div>

                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="IsActive" id="add_IsActive" value="true" checked
                        class="h-3.5 w-3.5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label for="add_IsActive" class="text-gray-700">Active</label>
                </div>

                <!-- BUTTONS -->
                <div class="flex justify-end items-center pt-2 space-x-2">
                    <button type="button" id="cancelAddBtn"
                        class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-3 py-1.5 rounded-sm transition">
                        Cancel
                    </button>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-3 py-1.5 rounded-sm transition">
                        Save Source
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- MODAL: View / Edit Emission Source -->
    <div id="editSourceModal"
        class="fixed inset-0 bg-black bg-opacity-40 hidden items-start justify-center z-50 p-4 pt-16 transition-all duration-200 opacity-0 -translate-y-5 !mt-0">
        <div class="bg-white rounded-md shadow-lg w-full max-w-2xl p-5 space-y-4 h-fit">
            <!-- HEADER -->
            <div class="flex justify-between items-center border-b border-gray-200 pb-2">
                <h2 class="text-sm font-semibold text-gray-700">View / Edit Emission Source</h2>
                <button id="closeEditSourceModal" class="text-gray-500 hover:text-gray-700">
                    <i class="bi bi-x-lg text-xs"></i>
                </button>
            </div>

            <!-- FORM -->
            <form asp-controller="EmissionSources" id="editSourceForm" method="post" class="space-y-3 text-xs">
                @Html.AntiForgeryToken()
                <input type="hidden" name="EmissionSourceID" id="edit_SourceID" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Code</label>
                        <input type="text" name="SourceCode" id="edit_SourceCode"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Name</label>
                        <input type="text" name="SourceName" id="edit_SourceName"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Latitude</label>
                        <input type="number" step="any" name="Latitude" id="edit_Latitude"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Longitude</label>
                        <input type="number" step="any" name="Longitude" id="edit_Longitude"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Location</label>
                        <input type="text" name="Location" id="edit_Location"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block font-medium text-gray-600 mb-1">Source Type</label>
                        <select name="SourceTypeID" id="emission_sources_stid"
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none">
                            <option value="">-- Select Type --</option>
                            @foreach (var type in ViewBag.SourceTypes ?? new List<dynamic>())
                            {
                                <option value="@type.SourceTypeID">@type.SourceTypeName</option>
                            }
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block font-medium text-gray-600 mb-1">Description</label>
                    <textarea name="Description" id="emission_sources_des" rows="3"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none"></textarea>
                </div>

                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="IsActive" id="edit_IsActiveSource" value="true" checked
                        class="h-3.5 w-3.5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label for="edit_IsActiveSource" class="text-gray-700">Active</label>
                </div>

                <div class="flex justify-between items-center pt-2">
                    <button type="button" id="deleteSourceBtn" class="text-xs text-red-600 hover:text-red-800">
                        Delete
                    </button>
                    <div class="space-x-2">
                        <button type="button" id="cancelEditSourceBtn"
                            class="bg-gray-200 hover:bg-gray-300 text-gray-700 text-xs font-medium px-3 py-1.5 rounded-sm transition">
                            Cancel
                        </button>
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-3 py-1.5 rounded-sm transition">
                            Save changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.sourceManagementConfig = {
            deleteUrl: '@Url.Action("Delete", "EmissionSources")',
            restoreUrl: '@Url.Action("Restore", "EmissionSources")'
        };
    </script>
    <script src="~/js/source-management.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}

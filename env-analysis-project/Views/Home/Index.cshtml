@using System.Collections.Generic
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard";
    var jsonOptions = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
    var emissionSourcesJson = JsonSerializer.Serialize(ViewBag.EmissionSources ?? new List<object>(), jsonOptions);
    var parametersJson = JsonSerializer.Serialize(ViewBag.Parameters ?? new List<object>(), jsonOptions);
}

<form id="measurementResultsAntiForgery" method="post" class="hidden">
    @Html.AntiForgeryToken()
</form>

<div class="w-full mx-auto p-4">


    <section class="mb-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
            <div class="lg:col-span-1">
                <div class="w-full h-[150vh] bg-white border border-gray-200 rounded p-4 space-y-4 flex flex-col min-h-0">
                    <div class="space-y-2">
                        <div>
                            <p class="text-sm font-semibold text-gray-800">Latest parameter values</p>
                            <p class="text-xs text-gray-500">Most recent reading by parameter.</p>
                        </div>
                        <input id="latestMeasurementsSearch" type="text"
                            placeholder="Filter parameters..."
                            class="w-full border border-gray-300 rounded-sm px-3 py-1.5 text-xs focus:ring-1 focus:ring-blue-500 focus:outline-none bg-white" />
                    </div>
                    <div class="border border-gray-100 rounded-md overflow-hidden flex-1 min-h-0">
                        <div class="max-h-full overflow-y-auto">
                        <table class="w-full text-xs text-left">
                            <thead class="bg-gray-100 text-gray-700">
                                <tr>
                                    <th class="px-3 py-2">Parameter</th>
                                    <th class="px-3 py-2 text-right">Value</th>
                                </tr>
                            </thead>
                            <tbody id="latestMeasurementsBody" class="divide-y divide-gray-100">
                                <tr>
                                    <td colspan="2" class="px-3 py-5 text-center text-gray-400">Loading latest values...</td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                    </div>
                    <div class="text-[11px] text-gray-500 flex items-center justify-between">
                        <span id="latestMeasurementsCount">0 parameters</span>
                        <span id="latestMeasurementsUpdated">Updated: --</span>
                    </div>
                </div>
            </div>
            <div class="lg:col-span-3">
                <div class="w-full h-[150vh] bg-white border border-gray-200 rounded p-4 min-h-0 flex flex-col overflow-hidden">
                    <div class="flex flex-col gap-4 w-full shrink-0">
                        <div class="w-full space-y-3">
                            <div class="flex flex-col gap-3">
                                <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-3">
                                    <div>
                                        <p class="text-sm font-semibold text-gray-800">Parameter trends</p>
                                        <p class="text-xs text-gray-500">Select a parameter.</p>
                                    </div>
                                    <div class="flex flex-col lg:flex-row lg:items-center gap-3">
                                        <div class="flex gap-2 border-b border-gray-200 text-xs font-medium ml-8">
                                            <button type="button" data-trend-tab="water"
                                                class="trend-tab-btn px-4 py-2 -mb-px border-b-2 border-transparent text-gray-500 hover:text-blue-600">
                                                Water
                                            </button>
                                            <button type="button" data-trend-tab="air"
                                                class="trend-tab-btn px-4 py-2 -mb-px border-b-2 border-blue-600 text-blue-600">
                                                Air
                                            </button>
                                        </div>
                                        <button type="button" id="trendFilterOpen"
                                            class="px-3 py-1.5 text-xs font-semibold text-gray-700 border border-gray-300 rounded-sm hover:bg-gray-100 transition">
                                            Filter
                                        </button>
                                        <button type="button" id="trendLimitToggle"
                                            class="px-3 py-1.5 text-xs font-semibold text-gray-700 border border-gray-300 rounded-sm hover:bg-gray-100 transition">
                                            Limit: On
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="w-full space-y-6">
                            <div id="trendLineSection" data-trend-order="line" class="relative h-[30vh]">
                                <div id="parameterTrendChart" class="absolute inset-0 w-full h-full invisible"></div>
                                <div id="trendChartPlaceholder"
                                    class="absolute inset-0 flex items-center justify-center text-gray-400 text-sm text-center px-6">
                                    Select parameter(s) to generate the chart.
                                </div>
                            </div>
                            <div id="airGroupedBarSection" data-trend-order="grouped" class="hidden pt-8">
                                <div class="flex items-center justify-between mb-2">
                                    <p class="text-xs font-semibold text-gray-700">Grouped comparison</p>
                                    <span class="text-[11px] text-gray-500">Air by source · Water by parameter</span>
                                </div>
                                <div class="relative h-48">
                                    <div id="airGroupedBarChart" class="absolute inset-0 w-full h-full invisible"></div>
                                    <div id="airGroupedBarPlaceholder"
                                        class="absolute inset-0 flex items-center justify-center text-gray-400 text-sm text-center px-6">
                                        Select an air parameter or water parameter(s) to view grouped comparison.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="border-t border-gray-100 pt-4 flex-1 min-h-0 flex flex-col">
                        <div class="flex items-center justify-between mb-2">
                            <p class="text-xs font-semibold text-gray-700">Measurement values</p>
                            <span class="text-[11px] text-gray-500">Filtered history</span>
                        </div>
                        <div class="overflow-x-auto flex-1 min-h-0">
                            <div class="max-h-full overflow-y-auto">
                            <table class="w-full text-xs text-left table-auto">
                                <thead class="bg-gray-100 text-gray-700">
                                    <tr>
                                        <th class="px-3 py-2">Month</th>
                                        <th class="px-3 py-2">Parameter</th>
                                        <th class="px-3 py-2">Source</th>
                                        <th class="px-3 py-2">Value</th>
                                        <th class="px-3 py-2">Unit</th>
                                    </tr>
                                </thead>
                                <tbody id="trendTableBody" class="divide-y divide-gray-100">
                                    <tr id="trendTableEmptyRow">
                                        <td colspan="5" class="px-3 py-5 text-center text-gray-400">
                                            Select parameter(s) to see available measurements.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                            <div
                                class="pt-3 border-t border-gray-100 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between text-[11px] text-gray-600">
                                <div id="trendTableSummary">No data</div>
                                <div class="flex flex-col sm:flex-row sm:items-center gap-3">
                                    <label class="flex items-center gap-2">
                                        <span class="text-gray-500">Rows per page</span>
                                        <select id="trendTablePageSize"
                                            class="border border-gray-300 rounded-sm px-2 py-1 text-xs focus:ring-1 focus:ring-blue-500 focus:outline-none">
                                            <option value="6">6</option>
                                            <option value="12" selected>12</option>
                                        </select>
                                    </label>
                                    <div class="flex items-center gap-3">
                                        <span id="trendTablePageLabel">Page 1 of 1</span>
                                        <div class="inline-flex border border-gray-300 rounded-md overflow-hidden">
                                            <button type="button" id="trendTablePrev"
                                                class="px-3 py-1.5 text-xs text-gray-600 disabled:opacity-40 disabled:cursor-not-allowed hover:bg-gray-100 transition">
                                                Prev
                                            </button>
                                            <button type="button" id="trendTableNext"
                                                class="px-3 py-1.5 text-xs text-gray-600 border-l border-gray-300 disabled:opacity-40 disabled:cursor-not-allowed hover:bg-gray-100 transition">
                                                Next
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

<div id="trendFilterModal"
    class="app-modal trend-filter-modal fixed inset-0 bg-black bg-opacity-40 items-start justify-center z-50 p-4 pt-16 transition-all duration-200"
    aria-hidden="true">
    <div id="trendFilterModalPanel"
        class="app-modal__panel app-modal__panel--md bg-white rounded-md shadow-lg w-full max-w-xl p-5 space-y-5 h-fit">
        <div class="flex justify-between items-start border-b border-gray-200 pb-3">
            <div>
                <h2 class="text-sm font-semibold text-gray-700">Filter parameters</h2>
                <p class="text-xs text-gray-500">Filter by parameter, source, or time range.</p>
            </div>
            <button type="button" id="trendFilterClose" class="text-gray-500 hover:text-gray-700">
                <i class="bi bi-x-lg text-xs"></i>
            </button>
        </div>
        <form id="trendFilterForm" class="space-y-4 text-xs">
            <div>
                <label class="block font-medium text-gray-700 mb-1" for="parameterTrendSelect">Parameter</label>
                <select id="parameterTrendSelect"
                    class="w-full border border-gray-300 rounded-sm px-3 py-1.5 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none"></select>
                <p id="trendSelectHint" class="text-[11px] text-gray-500 mt-1">
                    Hold Ctrl (or Command on Mac) and click to select multiple water parameters.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                <div>
                    <label class="block font-medium text-gray-700 mb-1" for="trendFilterSource">Source</label>
                    <select id="trendFilterSource"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 bg-white focus:ring-1 focus:ring-blue-500 focus:outline-none">
                        <option value="">All sources</option>
                    </select>
                </div>
                <div>
                    <label class="block font-medium text-gray-700 mb-1" for="trendFilterStart">From month</label>
                    <input id="trendFilterStart" type="month"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                </div>
                <div>
                    <label class="block font-medium text-gray-700 mb-1" for="trendFilterEnd">To month</label>
                    <input id="trendFilterEnd" type="month"
                        class="w-full border border-gray-300 rounded-sm px-3 py-1.5 focus:ring-1 focus:ring-blue-500 focus:outline-none" />
                </div>
            </div>
            <div class="flex justify-between items-center pt-3 border-t border-gray-100">
                <button type="button" id="trendFilterReset"
                    class="bg-gray-100 hover:bg-gray-200 text-gray-700 text-xs font-medium px-3 py-1.5 rounded-sm transition inline-flex items-center gap-1">
                    <i class="bi bi-arrow-counterclockwise text-[11px]"></i>
                    Reset
                </button>
                <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium px-3 py-1.5 rounded-sm transition inline-flex items-center gap-1">
                    <i class="bi bi-sliders text-[11px]"></i>
                    Apply filter
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window.measurementResultLookups = {
            emissionSources: @Html.Raw(emissionSourcesJson),
            parameters: @Html.Raw(parametersJson)
        };
        window.measurementResultRoutes = {
            trend: '@Url.Action("ParameterTrends", "MeasurementResults")',
            latest: '@Url.Action("LatestMeasurementValues", "Parameters")'
        };
        window.measurementResultConfig = {
            latestMode: 'list'
        };
        window.measurementResultPermissions = {
            canApprove: @User.IsInRole("Admin").ToString().ToLowerInvariant()
        };
    </script>
    <script>
        (function () {
            var modal = document.getElementById('trendFilterModal');
            var openBtn = document.getElementById('trendFilterOpen');
            var closeBtn = document.getElementById('trendFilterClose');

            if (!modal || !openBtn || !closeBtn) return;

            function openModal() {
                modal.classList.add('app-modal--open');
                modal.setAttribute('aria-hidden', 'false');
            }

            function closeModal() {
                modal.classList.remove('app-modal--open');
                modal.setAttribute('aria-hidden', 'true');
            }

            function toggleModal() {
                if (modal.classList.contains('app-modal--open')) {
                    closeModal();
                } else {
                    openModal();
                }
            }

            openBtn.addEventListener('click', toggleModal);
            closeBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', function (event) {
                if (event.target === modal) {
                    closeModal();
                }
            });
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/js/measurement-results-management.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/modal-effects.css" asp-append-version="true" />
}

<style>
    #parameterTrendChart {
        min-height: 0 !important;
        height: 100% !important;
    }

    .trend-filter-modal {
        align-items: center;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }
</style>
